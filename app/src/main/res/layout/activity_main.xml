<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.traffic.driver.ongoproject.MainActivity"
    android:background="#50B0D8"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_weight="10"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHEELS\nof FORTUNE"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_gravity="bottom"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/car"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:hint="USERNAME"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:textSize="10sp"
            android:drawableRight="@drawable/usericon"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/emailField"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:hint="PASSWORD"
            android:textColorHint="#000"
            android:paddingLeft="20dp"
            android:textSize="10sp"
            android:drawableRight="@drawable/lockicon"
            android:paddingRight="20dp"
            android:id="@+id/passwordField"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/createButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:background="@android:color/transparent"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/forgotPassword"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fb9f00"
            android:text="SIGN IN"
            android:textColor="#fff"
            android:id="@+id/signIn"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"
            android:background="#3a5795"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:id="@+id/facebook"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter"
            android:background="#2b7bb9"
            android:textColor="#fff"
            android:id="@+id/twitter"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</LinearLayout>
